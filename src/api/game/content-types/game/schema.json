{
  "kind": "collectionType",
  "collectionName": "games",
  "info": {
    "singularName": "game",
    "pluralName": "games",
    "displayName": "games",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 40,
      "minLength": 4
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "reviews": {
      "type": "richtext",
      "required": true,
      "minLength": 50
    },
    "release_date": {
      "type": "date"
    },
    "publisher_name": {
      "type": "string"
    },
    "purchase": {
      "type": "boolean",
      "default": false
    },
    "game_picture": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "languages": {
      "type": "customField",
      "options": [
        "english",
        "russian",
        "italian",
        "chiniese",
        ""
      ],
      "customField": "plugin::multi-select.multi-select"
    },
    "genres": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::genre.genre",
      "inversedBy": "games"
    },
    "system_requirements": {
      "type": "dynamiczone",
      "components": [
        "operation-system.linux",
        "operation-system.mac-os",
        "operation-system.windows",
        "requirements.min-requirements",
        "requirements.recommended-requirements"
      ]
    }
  }
}
